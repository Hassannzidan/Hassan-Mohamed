{% schema %}
{
    "name": "Gift Section",
    "settings": [
        {
            "type": "text",
            "id": "nav_subtitle",
            "label": "Navigation Subtitle",
            "default": "Find the ideal gift for your loved ones."
        },
        {
            "type": "text",
            "id": "nav_button",
            "label": "Navigation Button Text",
            "default": "Choose Gift"
        },
        {
            "type": "text",
            "id": "left_title",
            "label": "Left Title",
            "default": "The Gift Guid"
        },
        {
            "type": "text",
            "id": "left_text",
            "label": "Left Text",
            "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
        },
        {
            "type": "text",
            "id": "left_button",
            "label": "Left Button",
            "default": "Shop Now"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Footer Text",
            "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
        }
    ]
}
{% endschema %}

<section>
    <nav class="gift-nav">
        <!-- burger menu -->
        <button class="burger-btn"></button>
        
        <!-- brand logo -->
        <div class="gift-logo"> 
            <img src="{{ 'brandLogo.svg' | asset_url }}" alt="Brand Logo" width="150" height="">
        </div>

        <!-- navigation links -->
        <div class="nav-links" id="mobile-menu">
            <p class="gift-subtitle">{{ section.settings.nav_subtitle}}</p>
            <button class="gift-btn"> 
                {{ section.settings.nav_button_text }}
                {% comment %} svg for the button -> will be added {% endcomment %}
            </button>
        </div>
    </nav>

    <!--Raw 2 -->
    <div class="gift-row2">
        <img src="{{ 'gifts-upper.svg' | asset_url }}" alt="Gift Image" class="gift-image" width="" height="">
    </div>

    <!--Raw 3 -->
    <div class="gift-row3">
        <!-- Left Side -->
        <div class="gift-row3-left">
            <h3 class="gift-title">{{ section.settings.left_title }}</h3>
            <p class="gift-desc">{{ section.settings.left_text }}</p>
            <button class="gift-cta">{{ section.settings.left_button }}</button>
        </div>
        <!-- Right Side -->
        <div class="gift-row3-right">
            <img src="{{ 'gifts-right.svg' | asset_url }}" alt="Gift Image" class="gift-image" width="" height="">
        </div>
    </div>
    <!--Raw 4 -->
    <div class="gift-row4">
        <p class="gift-footer">{{ section.settings.footer_text }}</p>
    </div>
</section>
{{ 'header-style.css' | asset_url | stylesheet_tag }}
